@model List<WebApplication.Models.Client>

@Styles.Render("~/MyDesign/DeviceStyle.css")

<div class="container">
    <table cellpadding="0" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Client ID</th>
                <th>Client Name</th>
                <th>Type</th>
                <th>Birthdate</th>
                <th>Action</th>

            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>

                <tr>
                    <td valign="middle" data-header-title="Date"><span>@item.ClientId</span></td>
                    <td valign="middle" data-header-title="Price">@item.ClientName</td>
                    <td valign="middle" data-header-title="Price">@item.Classification</td>
                    <td valign="middle" data-header-title="Price">@item.Birthdate</td>
                    <td valign="middle" data-header-title="Supplement">
                       
                        <div class="btn-group-sm">
                            <a href="/Client/Details/@item.ClientId" class="btn btn-primary  active" aria-current="page"> Details</a>
                            <a href="/Client/Edit/@item.ClientId" class="btn btn-primary ">Edit</a>
                            <a href="/Client/Delete/@item.ClientId" class="btn btn-primary ">Delete</a>
                        </div>
                    </td>
                </tr>

            </tbody>


        }
    </table>
</div>



