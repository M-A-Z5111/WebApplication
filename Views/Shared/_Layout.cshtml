<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<link href="~/Content/MyDesign/MainDesign.css" rel="stylesheet" />
</head>
<body>

    <div id="container">
        <ul id="menu">
            <li>
                <a href="/Home/Index"> Home</a>
               
            </li>
            <li>
                <a href="/Device/Index">Devices</a>
                <ul>
                    <li><a href="/Device/Create">Add new device</a></li>
                    
                    
                </ul>
            </li>
            <li>
                <a href="/Client/Index">Clients</a>
                <ul>
                    <li><a href="/Client/Create">Add new client</a></li>
                   
                </ul>
            </li>
            <li>
                <a href="/PhoneNumber/Index">PhoneNumber</a>
                <ul>
                    <li><a href="/PhoneNumber/Create">Add new phonenumber</a></li>
                   
                </ul>
            </li>
           
        </ul>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Web Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
