@model List<WebApplication.Models.Device>

@Styles.Render("~/MyDesign/DeviceStyle.css")

<div class="container">
    <table cellpadding="0" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Device ID</th>
                <th>Device Name</th>
                <th>Action</th>

            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>

                <tr>
                    <td valign="middle" data-header-title="Date"><span>@item.DeviceId</span></td>
                    <td valign="middle" data-header-title="Price">@item.DeviceName</td>
                    <td valign="middle" data-header-title="Supplement">
                        <div class="btn-group-sm">
                            <a href="/Device/Details/@item.DeviceId" class="btn btn-primary  active" aria-current="page"> Details</a>
                            <a href="/Device/Edit/@item.DeviceId" class="btn btn-primary ">Edit</a>
                            <a href="/Device/Delete/@item.DeviceId" class="btn btn-primary ">Delete</a>
                        </div>
                    </td>
                </tr>

            </tbody>


        }
    </table>
</div>



